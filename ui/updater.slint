import { Button } from "./components/button.slint";
import { UpdaterLogic } from "./logic/updater.slint";

export component Updater inherits Window {
  width: 500px;
  height: 400px;
  title: "Aletheia - Updater";
  icon: @image-url("../resources/logo/moe.spencer.Aletheia.png");

  Rectangle {
    width: 100%;
    height: 100%;
    background: #1e1e2e;

    VerticalLayout {
      spacing: 24px;
      padding: 24px;
      alignment: start;

      VerticalLayout {
        spacing: 12px;
        alignment: center;

        Text {
          text: @tr("Update Available");
          color: #cdd6f4;
          font-family: "Inter";
          font-size: 24px;
          font-weight: 700;
          horizontal-alignment: center;
        }
      }

      Rectangle { height: 1px; background: #45475a; }

      VerticalLayout {
        spacing: 16px;

        HorizontalLayout {
          spacing: 16px;
          alignment: center;

          VerticalLayout {
            spacing: 4px;
            alignment: center;

            Text {
              text: @tr("Current");
              color: #a6adc8;
              font-family: "Inter";
              font-size: 12px;
              font-weight: 500;
              horizontal-alignment: center;
            }

            Text {
              text: UpdaterLogic.current_version;
              color: #f38ba8;
              font-family: "Inter";
              font-size: 16px;
              font-weight: 600;
              horizontal-alignment: center;
            }
          }

          Text {
            text: "â†’";
            color: #a6adc8;
            font-family: "Inter";
            font-size: 20px;
          }

          VerticalLayout {
            spacing: 4px;
            alignment: center;

            Text {
              text: @tr("New");
              color: #a6adc8;
              font-family: "Inter";
              font-size: 12px;
              font-weight: 500;
              horizontal-alignment: center;
            }

            Text {
              text: UpdaterLogic.new_version;
              color: #a6e3a1;
              font-family: "Inter";
              font-size: 16px;
              font-weight: 600;
              horizontal-alignment: center;
            }
          }
        }
      }

      VerticalLayout {
        spacing: 8px;

        Text {
          text: @tr("What's New");
          color: #cdd6f4;
          font-family: "Inter";
          font-size: 16px;
          font-weight: 600;
        }

        Rectangle {
          height: 120px;
          background: #313244;
          border-radius: 8px;

          Flickable {
            width: 100%;
            height: 100%;
            viewport-width: self.width;
            viewport-height: text.preferred-height + 12px;

            text := Text {
              width: parent.width - 24px;
              text: UpdaterLogic.changelog;
              color: #cdd6f4;
              font-family: "Inter";
              font-size: 14px;
              wrap: word-wrap;
            }
          }
        }
      }

      HorizontalLayout {
        spacing: 12px;
        alignment: end;

        Button {
          width: 80px;
          height: 36px;
          text: @tr("Skip");
          clicked => { UpdaterLogic.skip_update(); }
        }

        Button {
          width: 140px;
          height: 36px;
          text: @tr("Download");
          clicked => {
            UpdaterLogic.downloading = true;
            UpdaterLogic.download_update();
          }
        }
      }
    }
  }
}
