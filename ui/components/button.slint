import { ThemeLogic } from "../logic/theme.slint";

export component Button {
  in property <string> text;
  in property <color> background: ThemeLogic.colors.primary;
  in property <bool> enabled: true;
  callback clicked <=> touch_area.clicked;

  accessible-role: button;
  accessible-enabled: root.enabled;
  accessible-label: root.text;
  accessible-action-default => clicked();

  Rectangle {
    background: root.background;
    opacity: root.enabled ? 100% : 50%;
    border-color: ThemeLogic.colors.border;
    border-radius: 8px;
    border-width: 1px;
    drop-shadow-blur: 8px;
    drop-shadow-color: ThemeLogic.colors.surface_shadow;
    drop-shadow-offset-y: 4px;

    animate opacity { duration: 200ms; easing: ease-out; }

    Text {
      text: root.text;
      color: ThemeLogic.colors.text_primary;
      font-family: "Inter";
      font-size: 14px;
      font-weight: 600;
      horizontal-alignment: center;
      vertical-alignment: center;
    }

    touch_area := TouchArea {
      enabled: root.enabled;
      mouse-cursor: pointer;
    }
  }
}
